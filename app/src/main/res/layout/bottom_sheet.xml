<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativlayout"
        android:padding="16dp">

        <ImageView
            android:id="@+id/sheet_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:text="Asadbek"
            android:id="@+id/sheet_title"
            android:layout_width="236dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/sheet_image"
            android:layout_marginStart="16dp"
            android:textSize="30sp"/>

        <TextView
            android:text="Doimjonov"
            android:id="@+id/sheet_detail"
            android:layout_width="236dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sheet_title"
            app:layout_constraintLeft_toRightOf="@+id/sheet_image"/>
        >

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>